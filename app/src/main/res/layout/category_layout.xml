<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:orientation="horizontal">
     <LinearLayout
         android:padding="@dimen/default_gap"
         android:layout_margin="@dimen/default_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="150dp"
             android:layout_height="213dp"
             android:layout_margin="@dimen/default_gap"
             app:cardBackgroundColor="@color/whiteBlack"
             app:cardCornerRadius="10dp">

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_margin="@dimen/default_gap"
                 android:orientation="vertical">

                 <androidx.cardview.widget.CardView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     app:cardCornerRadius="10dp">

                     <ImageView
                         android:id="@+id/imageView"
                         android:layout_width="100dp"
                         android:layout_height="100dp"
                         android:scaleType="fitXY"
                         android:src="@drawable/img_6" />
                 </androidx.cardview.widget.CardView>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/default_gap"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/textview_id"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Mix Pizza"
                         android:textColor="@color/black"
                         android:textSize="15sp"
                         android:textStyle="bold" />

                     <TextView
                         android:id="@+id/textmsg_id"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:hint="Egg-Salad"
                         android:maxLines="2"
                         android:textColorHint="@color/hinttype"
                         android:textSize="10sp" />

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:orientation="horizontal">

                         <info.androidhive.fontawesome.FontTextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/fa_star"
                             android:textColor="@color/orangeFav"
                             android:textSize="12dp"
                             app:solid_icon="true" />

                         <TextView
                             android:id="@+id/id_ratemsg"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="4.3(273)"
                             android:textColor="@color/orange2"
                             android:textSize="15sp" />
                     </LinearLayout>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/id_price"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="$18.75"
                         android:textColor="@color/orange2"
                         android:textSize="15sp"
                         android:textStyle="bold" />

                     <info.androidhive.fontawesome.FontTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_marginLeft="20dp"
                         android:text="@string/fa_heart_solid"
                         android:textColor="@color/orangeFav"
                         android:textSize="14dp"
                         app:solid_icon="false" />


                 </LinearLayout>

             </LinearLayout>


         </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>