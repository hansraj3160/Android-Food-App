<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whiteBlack"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_margin="@dimen/default_gap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_margin="@dimen/default_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mix Pizza"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textmsg_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Egg-Salad"
                    android:textColorHint="@color/hinttype"
                    android:textSize="10sp"
                   />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <info.androidhive.fontawesome.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_star"
                        android:textColor="@color/orangeFav"
                        android:textSize="12dp"
                        app:solid_icon="true" />

                    <TextView
                        android:id="@+id/id_ratemsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.3(273)"
                        android:textColor="@color/orange2"
                        android:textSize="15sp"
                         />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
         <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="right"
                android:padding="@dimen/default_gap"
                android:orientation="vertical">
                <TextView
                    android:padding="@dimen/default_gap"
                    android:id="@+id/id_priceP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$18.75"
                    android:textColor="@color/orange2"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <info.androidhive.fontawesome.FontTextView
                    android:padding="@dimen/default_gap"
                    android:id="@+id/fontawesome_x"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_heart_solid"
                    android:textColor="@color/orangeFav"
                    android:textSize="14dp"
                    app:solid_icon="false" />


            </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>