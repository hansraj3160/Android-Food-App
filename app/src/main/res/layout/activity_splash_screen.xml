<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:srcCompat="@drawable/splashimage" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAD Project"
        android:textSize="40dp"
        android:textStyle="bold"
        android:autoSizeMaxTextSize="@dimen/default_gap"
        android:textColor="@color/whiteBlack"
        />


      <androidx.cardview.widget.CardView
          android:padding="@dimen/default_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/whiteBlack"
            app:cardCornerRadius="50dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="140dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/hans" />
      </androidx.cardview.widget.CardView>
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student:\n \t\t\t Hans raj"
        android:textSize="16dp"
        android:autoSizeMaxTextSize="@dimen/default_gap"
        android:textColor="@color/black2"/>


</LinearLayout>